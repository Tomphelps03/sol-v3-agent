{
  "openapi": "3.1.1",
  "info": {
    "title": "Sol v3 Agent",
    "version": "1.0.4"
  },
  "servers": [
    { "url": "https://sol-v3-agent.onrender.com" }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "health",
        "responses": { "200": { "description": "Service health" } }
      }
    },
    "/whoami": {
      "get": {
        "operationId": "whoami",
        "responses": { "200": { "description": "Identity info" } }
      }
    },
    "/find_pages": {
      "post": {
        "operationId": "find_pages",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "db": { "type": "string", "enum": ["docs", "roadmap", "tasks"] },
                  "page_size": { "type": "integer" },
                  "start_cursor": { "type": "string" },
                  "filter": { "type": "object" },
                  "sort": { "type": "array", "items": { "type": "object" } }
                },
                "required": ["db"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Query pages" } }
      }
    },
    "/get_page": {
      "get": {
        "operationId": "get_page",
        "parameters": [
          { "in": "query", "name": "page_id", "schema": { "type": "string" }, "required": true }
        ],
        "responses": { "200": { "description": "Page properties" } }
      }
    },
    "/page_blocks": {
      "get": {
        "operationId": "page_blocks",
        "parameters": [
          { "in": "query", "name": "page_id", "schema": { "type": "string" }, "required": true }
        ],
        "responses": { "200": { "description": "Block children" } }
      }
    },
    "/page_markdown": {
      "get": {
        "operationId": "page_markdown",
        "parameters": [
          { "in": "query", "name": "page_id", "schema": { "type": "string" }, "required": true }
        ],
        "responses": { "200": { "description": "Markdown content" } }
      }
    },
    "/upsert_page": {
      "post": {
        "operationId": "upsert_page",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "db": { "type": "string", "enum": ["docs", "roadmap", "tasks"] },
                  "page_id": { "type": "string" },
                  "title": { "type": "string" },
                  "content": {
                    "type": "object",
                    "properties": {
                      "description": { "type": "string" },
                      "files": { "type": "array", "items": { "type": "string" } },
                      "subtasks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "text": { "type": "string" },
                            "checked": { "type": "boolean" }
                          }
                        }
                      },
                      "blocks": { "type": "array", "items": { "type": "object" } }
                    }
                  }
                },
                "additionalProperties": true,
                "required": ["db"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Upserted page" } }
      }
    },
    "/append_task_content": {
      "post": {
        "operationId": "append_task_content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page_id": { "type": "string" },
                  "content": {
                    "type": "object",
                    "properties": {
                      "description": { "type": "string" },
                      "files": { "type": "array", "items": { "type": "string" } },
                      "subtasks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "text": { "type": "string" },
                            "checked": { "type": "boolean" }
                          }
                        }
                      },
                      "blocks": { "type": "array", "items": { "type": "object" } }
                    }
                  }
                },
                "required": ["page_id"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Appended content" } }
      }
    },
    "/replace_page_content": {
      "post": {
        "operationId": "replace_page_content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page_id": { "type": "string" },
                  "content": {
                    "type": "object",
                    "properties": {
                      "description": { "type": "string" },
                      "files": { "type": "array", "items": { "type": "string" } },
                      "subtasks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "text": { "type": "string" },
                            "checked": { "type": "boolean" }
                          }
                        }
                      },
                      "blocks": { "type": "array", "items": { "type": "object" } }
                    }
                  }
                },
                "required": ["page_id"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Replaced content" } }
      }
    },
    "/delete_page": {
      "post": {
        "operationId": "delete_page",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page_id": { "type": "string" }
                },
                "required": ["page_id"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Deleted page" } }
      }
    },
    "/update_fields": {
      "post": {
        "operationId": "update_fields",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "db": { "type": "string", "enum": ["docs", "roadmap", "tasks"] },
                  "page_id": { "type": "string" }
                },
                "additionalProperties": true,
                "required": ["db", "page_id"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Updated fields" } }
      }
    },
    "/batch_update_fields": {
      "post": {
        "operationId": "batch_update_fields",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "db": { "type": "string", "enum": ["docs", "roadmap", "tasks"] },
                  "updates": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "page_id": { "type": "string" }
                      },
                      "additionalProperties": true,
                      "required": ["page_id"]
                    }
                  }
                },
                "required": ["db", "updates"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Batch updated fields" } }
      }
    },
    "/generate_document": {
      "post": {
        "operationId": "generate_document",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "format": { "type": "string", "enum": ["docx", "pptx", "pdf", "md"] }
                },
                "required": ["title", "content", "format"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Generated document" } }
      }
    },
    "/notion_schema": {
      "get": {
        "operationId": "get_notion_schema",
        "parameters": [
          { "in": "query", "name": "db", "schema": { "type": "string", "enum": ["docs", "roadmap", "tasks"] }, "required": true }
        ],
        "responses": { "200": { "description": "Database schema" } }
      }
    },
    "/notion_users": {
      "get": {
        "operationId": "list_notion_users",
        "responses": { "200": { "description": "List users" } }
      }
    },
    "/notion_test_create": {
      "post": {
        "operationId": "notion_test_create",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "db": { "type": "string", "enum": ["docs", "roadmap", "tasks"] },
                  "title": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Test create" } }
      }
    },
    "/memory_note": {
      "post": {
        "operationId": "memory_note",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "topic": { "type": "string" },
                  "content": {
                    "type": "object",
                    "properties": {
                      "description": { "type": "string" },
                      "files": { "type": "array", "items": { "type": "string" } },
                      "subtasks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "text": { "type": "string" },
                            "checked": { "type": "boolean" }
                          }
                        }
                      },
                      "blocks": { "type": "array", "items": { "type": "object" } }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Memory note created" } }
      }
    },
    "/memory_notes": {
      "get": {
        "operationId": "memory_notes",
        "parameters": [
          { "in": "query", "name": "topic", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "List memory notes" } }
      }
    },
    "/memory_delete": {
      "post": {
        "operationId": "memory_delete",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "page_id": { "type": "string" } },
                "required": ["page_id"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Memory deleted" } }
      }
    },
    "/memory_pack_export": {
      "get": {
        "operationId": "memory_pack_export",
        "parameters": [
          { "in": "query", "name": "topic", "schema": { "type": "string" } },
          { "in": "query", "name": "format", "schema": { "type": "string", "enum": ["docx", "md"] } }
        ],
        "responses": { "200": { "description": "Exported memory pack" } }
      }
    },
    "/search_web": {
      "post": {
        "operationId": "search_web",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "recency_days": { "type": "integer" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Search results" } }
      }
    }
  }
}